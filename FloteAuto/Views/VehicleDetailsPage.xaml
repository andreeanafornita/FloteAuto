<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FloteAuto.Views.VehicleDetailsPage"
             Title="Detalii Vehicul">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Număr Înmatriculare:" />
        <Entry x:Name="numarEntry" Placeholder="Introduceți numărul..." />

        <Label Text="Marca:" />
        <Entry x:Name="marcaEntry" Placeholder="Introduceți marca..." />

        <Label Text="Model:" />
        <Entry x:Name="modelEntry" Placeholder="Introduceți modelul..." />

        <Label Text="Data Expirare ITP:" />
        <DatePicker x:Name="itpDatePicker" />

        <Label Text="Data Expirare Acte:" />
        <DatePicker x:Name="acteDatePicker" />

        <Button Text="Salvează" Clicked="OnSaveClicked" BackgroundColor="Green" TextColor="White" />
    </StackLayout>
</ContentPage>
