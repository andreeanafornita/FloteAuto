<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FloteAuto.Views.VehicleListPage"
             Title="Lista Vehicule">

    <StackLayout Padding="20" Spacing="10">

        <CollectionView x:Name="VehicleListView" SelectionMode="Single" SelectionChanged="OnVehicleSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="10" HasShadow="True">
                        <StackLayout>
                            <Label Text="{Binding NumarInmatriculare}" FontSize="18" FontAttributes="Bold" TextColor="DarkGreen" />
                            <Label Text="{Binding Marca}" FontSize="16" TextColor="Blue" />
                            <Label Text="{Binding Model}" FontSize="14" TextColor="Green" />
                            <Label Text="{Binding DataExpirareITP, StringFormat='ITP Expiră: {0:dd/MM/yyyy}'}" FontSize="12" TextColor="Blue" />
                            <Label Text="{Binding DataExpirareActe, StringFormat='Acte Expiră: {0:dd/MM/yyyy}'}" FontSize="12" TextColor="Green" />

                            <Button Text="Șterge" Clicked="OnDeleteClicked" BackgroundColor="Maroon" TextColor="Red" FontSize="12" Padding="5" Margin="0" HorizontalOptions="Start" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
